<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetailsOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetails"
        app:title="Chi tiết đơn hàng"
        app:titleTextColor="#FFF"
        android:background="#9C27B0"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:text="ID Khách hàng: "
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/idCus"
            android:textColor="#000"
            android:text="ID Khách hàng"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Họ và tên: "
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/nameCus"
            android:textColor="#000"
            android:text="Tong le thang"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Số điện thoại: "
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phoneCus"
            android:textColor="#000"
            android:text="Tong le thang"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal" >
        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Địa chỉ: "
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/addressCus"
            android:textColor="#000"
            android:text="Tong le thang"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Sách đã mua: "
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listViewDetailsOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>