<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminBookActivity"
    android:orientation="horizontal"
    >
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBarAdminBook"
                app:title="Quản lý sách"
                app:titleTextColor="#FFF"
                android:background="#4CAF50"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:background="@drawable/shadowbottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/addBook"
                    android:layout_margin="10dp"
                    android:text="+ Thêm sách"
                    android:textColor="#FF1100"
                    android:textStyle="bold"
                    android:background="@drawable/pillbutton"
                    app:backgroundTint="#FFEB3B"
                    android:layout_width="138dp"
                    android:layout_height="50dp">

                </Button>
                <ListView
                    android:id="@+id/allBook"
                    android:divider="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>
        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>