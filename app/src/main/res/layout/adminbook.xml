<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#F6F6F6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/shadowbottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:padding="5dp"
                android:weightSum="10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBookAdmin"
                    android:adjustViewBounds="true"
                    android:layout_margin="2dp"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="7.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/nameBookAdmin"
                        android:textColor="#00BCD4"
                        android:text="Ten San Pahm"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/priceBookAdmin"
                        android:textColor="#C61111"
                        android:text="565165dd"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/nxbBookAdmin"
                        android:text="NXB KIM DONG"
                        android:textSize="15sp"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>